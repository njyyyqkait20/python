    print(num)

    –ó–∞–¥–∞–Ω–∏–µ 2

def get_file_type(filename):
    extensions = {
        'doc': 'Word file',
        'docx': 'Word file',
        'py': 'Python file',
        'txt': 'Text file'
    } 
    parts = filename.split('.')
    if len(parts) < 2:
        return "–§–∞–π–ª –Ω–µ –∏–º–µ–µ—Ç —Ä–∞—Å—à–∏—Ä–µ–Ω–∏—è"
    extension = parts[-1].lower()
    return extensions.get(extension, f"–ù–µ–∏–∑–≤–µ—Å—Ç–Ω–æ–µ —Ä–∞—Å—à–∏—Ä–µ–Ω–∏–µ: .{extension}")
filename = input("–í–≤–µ–¥–∏—Ç–µ –∏–º—è —Ñ–∞–π–ª–∞ —Å —Ä–∞—Å—à–∏—Ä–µ–Ω–∏–µ–º: ")
file_type = get_file_type(filename)
print(file_type)

