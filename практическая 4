num1 = int(input("–í–≤–µ–¥–∏—Ç–µ –ø–µ—Ä–≤–æ–µ —á–∏—Å–ª–æ: "))
num2 = int(input("–í–≤–µ–¥–∏—Ç–µ –≤—Ç–æ—Ä–æ–µ —á–∏—Å–ª–æ: "))
if num1 % 3 == 0 and num2 % 3 == 0:
    print(True)
if num1 % 3 == 0 and num2 % 3 != 0 or num2 % 3 ==0 and num1 % 3 != 0:
    print("–¢–æ–ª—å–∫–æ –æ–¥–Ω–æ —á–∏—Å–ª–æ –¥–µ–ª–∏—Ç—Å—è –Ω–∞ 3")
elif num1 % 3 !=0 and num2 %3 !=0:
    print(False)

