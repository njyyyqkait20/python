side1 = int(input("–í–≤–µ–¥–∏—Ç–µ –ø–µ—Ä–≤—É—é —Å—Ç–æ—Ä–æ–Ω—É: "))
side2 = int(input("–í–≤–µ–¥–∏—Ç–µ –≤—Ç–æ—Ä—É—é —Å—Ç–æ—Ä–æ–Ω—É: "))
side3 = int(input("–í–≤–µ–¥–∏—Ç–µ —Ç—Ä–µ—Ç—å—é —Å—Ç–æ—Ä–æ–Ω—É: "))
if side1 == side2 and side2 == side3 and side3 == side1:
    print("–†–∞–≤–Ω–æ—Å—Ç–æ—Ä–Ω–Ω–∏–π")
elif side1 != side2 and side2 != side3 and side3 != side1:
    print("–†–∞–∑–Ω–æ—Å—Ç–æ—Ä–æ–Ω–Ω–∏–π")
elif side1 == side2 or side2 == side3 or side3 == side1:
    print("–†–∞–≤–Ω–æ–±–µ–¥—Ä–µ–Ω–Ω—ã–π")

